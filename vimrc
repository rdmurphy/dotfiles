set nocompatible
set history=1000
set isk+=_,$,@,%,#,-

set modelines=0
set encoding=utf-8
set number
set ruler
set backspace=indent,eol,start
set showcmd
set showmode
set visualbell
set hidden
set autoread
set showmatch
syntax on

set noswapfile
set nobackup
set nowritebackup
set nowb
set backupdir=$HOME/.vim/backup

set autoindent
set smartindent
set smarttab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set expandtab

set nowrap
set linebreak

set scrolloff=8
set sidescrolloff=15
set sidescroll=1
